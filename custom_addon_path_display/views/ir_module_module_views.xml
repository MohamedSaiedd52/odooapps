<odoo>
    <record id="view_module_form_inherit" model="ir.ui.view">
        <field name="name">ir.module.module.form.inherit</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base_import_module.module_form_apps_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='installed_version']" position="after">
                <field name="addon_path" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
